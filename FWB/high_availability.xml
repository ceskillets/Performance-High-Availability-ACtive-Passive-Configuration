<interface>
        <ha1>
          <ip-address>{{ha1_ip_address}}</ip-address>
          <netmask>{{ha1_netmask}}</netmask>
        </ha1>
        <ha1-backup>
          <port>ha1-b</port>
          <ip-address>{{ha1_backup_ip_address}}</ip-address>
          <netmask>{{ha1_backup_netmask}}</netmask>
        </ha1-backup>
        <ha2/>
        <ha2-backup/>
        <ha3/>
      </interface>
      <group>
        <group-id>{{group_id}}</group-id>
        <peer-ip>{{peer_ip}}</peer-ip>
        <peer-ip-backup>{{peer_ip_backup}}</peer-ip-backup>
        <mode>
          <active-passive>
            <passive-link-state>auto</passive-link-state>
          </active-passive>
        </mode>
        <election-option>
          <heartbeat-backup>yes</heartbeat-backup>
          <timers>
            <aggressive/>
          </timers>
        </election-option>
      </group>
      <enabled>yes</enabled>

